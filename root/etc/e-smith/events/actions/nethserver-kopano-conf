use strict;
use NethServer::Password;

my $password = NethServer::Password::store('kopano') || die('Could not get kopano password!');

my $commands = join("\n",
              "GRANT ALL PRIVILEGES ON `kopano`.* TO 'kopano'\@'localhost' IDENTIFIED BY '$password';",
              "FLUSH PRIVILEGES;",
              "CREATE DATABASE IF NOT EXISTS kopano DEFAULT CHARACTER SET = 'utf8';"
     ) . "\n";

open(FH, '|-', '/usr/bin/mysql -B -f') || die("[ERROR] Could not connect to mysql");
print FH $commands;
close(FH);
